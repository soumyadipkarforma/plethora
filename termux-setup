#!/data/data/com.termux/files/usr/bin/bash
# â”€â”€ Termux Setup â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# Run this on a fresh Termux install to get everything ready for google-scrape.
# Usage: bash termux-setup.sh
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

set -e

echo "ðŸ”§ Google Scrape â€” Termux Setup"
echo "================================"
echo ""

# Update package repos
echo "[1/4] Updating package lists..."
pkg update -y && pkg upgrade -y

# Install Python + git
echo "[2/4] Installing Python & Git..."
pkg install -y python git

# Install pip dependencies
echo "[3/4] Installing Python packages..."
pip install --upgrade pip
pip install requests beautifulsoup4 rich

# Make scripts executable
echo "[4/4] Making scripts executable..."
SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
chmod +x "$SCRIPT_DIR/scrape-low" "$SCRIPT_DIR/scrape-med" "$SCRIPT_DIR/scrape-high" "$SCRIPT_DIR/scrape.py"

echo ""
echo "âœ… All set! You can now run:"
echo "   ./scrape-low  \"your query\""
echo "   ./scrape-med  \"your query\""
echo "   ./scrape-high \"your query\""
echo ""
echo "Or use the full CLI:"
echo "   python scrape.py \"your query\" --level medium"
